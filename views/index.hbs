<h2>Todos page</h2>

{{#if todos.length}}
  <ul>
    {{#each todos}}
      <li class="todo">
          <label class="todo-bar">
            <form class="form-save" action="/complete" method="POST">
              {{#if completed}}
                <input type="checkbox" checked name="completed">
                <span class="completed">{{title}}</span>
              {{else}}
                <input type="checkbox" name="completed">
                <span>{{title}}</span>
              {{/if}}

              <input type="hidden" value="{{_id}}" name="id">
              
              <button class="btn btn-small btn-save" type="submit">Save</button>
            </form>
            <form class="form-delete" action="/delete" method="POST">
              <input type="hidden" value="{{_id}}" name="id">
              <button class="btn btn-small red darken-3" type="submit">Delete</button>
            </form>
          </label>
      </li>
    {{/each}}
  </ul>
{{else}}
  <p>No todos!</p>
{{/if}}
<script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>